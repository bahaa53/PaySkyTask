<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:orientation="vertical"
                                   android:layout_marginEnd="@dimen/paysky_tag_margin_end"
                                   android:layout_marginTop="@dimen/paysky_tag_top_margin"
                                   app:cardCornerRadius="6dp"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent"
                                                       android:paddingBottom="16dp"
                                                       android:background="@color/item_background_color">
        <ImageView android:id="@+id/iv_github_repo"
                   android:layout_width="50dp"
                   android:layout_height="50dp"
                   app:layout_constraintStart_toStartOf="parent"
                   android:src="@drawable/ic_launcher_background"
                   android:scaleType="centerCrop"
                   android:paddingTop="8dp"
                   android:paddingStart="8dp"
                   app:layout_constraintTop_toTopOf="parent"/>

        <TextView android:id="@+id/tv_github_repo_name"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toEndOf="@+id/iv_github_repo"
                 app:layout_constraintEnd_toEndOf="parent"
                  android:gravity="center"
                  tools:text="Pizza"
                  android:textColor="@color/textview_repo_name_color"
                  android:textSize="@dimen/item_tag_name_text_size"
                  android:layout_marginEnd="8dp"
                  android:layout_marginStart="8dp"
                  android:paddingEnd="8dp"
                  android:layout_marginTop="8dp"
        />

        <TextView android:id="@+id/tv_github_repo_description"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  app:layout_constraintTop_toBottomOf="@+id/iv_github_repo"
                  app:layout_constraintStart_toEndOf="@+id/iv_github_repo"
                 app:layout_constraintEnd_toEndOf="parent"
                  android:gravity="center"
                  tools:text="Pizza"
                  android:textColor="@color/textview_repo_desc_color"
                  android:textSize="12sp"
                  android:layout_marginStart="8dp"
                  android:layout_marginEnd="8dp"
                  android:paddingEnd="8dp"
                  android:layout_marginTop="8dp"
        />

        <ImageView android:id="@+id/iv_star"
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:src="@drawable/ic_star"
                   app:layout_constraintTop_toBottomOf="@+id/tv_github_repo_description"
                   app:layout_constraintStart_toStartOf="parent"
                   android:layout_marginTop="8dp"
                   android:layout_marginStart="8dp"
        />

        <TextView android:id="@+id/tv_github_repo_watchers"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  app:layout_constraintTop_toBottomOf="@+id/tv_github_repo_description"
                  app:layout_constraintStart_toEndOf="@+id/iv_star"
                  android:gravity="center"
                  tools:text="Pizza"
                  android:textColor="@color/textview_shortcut_desc_color"
                  android:textSize="12sp"
                  android:layout_marginStart="8dp"
                  android:layout_marginTop="10dp"
        />


        <ImageView android:id="@+id/iv_language"
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:src="@drawable/ic_language"
                   app:layout_constraintTop_toBottomOf="@+id/tv_github_repo_description"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   android:layout_marginTop="8dp"
                   android:layout_marginStart="8dp"
        />

        <TextView android:id="@+id/tv_github_repo_programming_language"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  app:layout_constraintTop_toBottomOf="@+id/tv_github_repo_description"
                  app:layout_constraintStart_toEndOf="@+id/iv_language"
                  android:gravity="center"
                  tools:text="Pizza"
                  android:textColor="@color/textview_shortcut_desc_color"
                  android:textSize="12sp"
                  android:layout_marginStart="8dp"
                  android:layout_marginTop="10dp"
        />


        <ImageView android:id="@+id/iv_opened_issues"
                   android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:src="@drawable/ic_report_problem"
                   app:layout_constraintTop_toBottomOf="@+id/tv_github_repo_description"
                   app:layout_constraintEnd_toStartOf="@+id/tv_github_repo_opened_issues"
                   app:layout_constraintEnd_toEndOf="parent"
                   android:layout_marginTop="8dp"
                   android:layout_marginEnd="8dp"
        />

        <TextView android:id="@+id/tv_github_repo_opened_issues"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  app:layout_constraintTop_toBottomOf="@+id/tv_github_repo_description"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:gravity="center"
                  tools:text="Pizza"
                  android:textColor="@color/textview_shortcut_desc_color"
                  android:textSize="12sp"
                  android:layout_marginEnd="8dp"
                  android:layout_marginTop="10dp"
        />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>